<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FriendsDatabase" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/prime</item>
        <item name="colorPrimaryDark">@color/primedark</item>
        <item name="colorAccent">@color/accent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FriendsDatabase.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FriendsDatabase.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FriendsDatabase.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>